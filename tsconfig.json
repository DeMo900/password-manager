{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,

    "module": "commonjs",
    "target": "es2020",
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",

    "skipLibCheck": true
  }
}
